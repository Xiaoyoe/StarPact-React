{
  "name": "react-vite-tailwind",
  "private": true,
  "version": "1.0.0",
  "description": "React Vite Desktop Application",
  "author": "Your Name",
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:nsis": "npm run build && electron-builder --win --x64 --nsis",
    "electron:build:portable": "npm run build && electron-builder --win --x64 --portable"
  },
  "build": {
    "appId": "com.reactvite.app",
    "productName": "React Vite App",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "React Vite App"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.exe"
    }
  },
  "dependencies": {
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "clsx": "2.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^11.0.2",
    "framer-motion": "^12.33.0",
    "lucide-react": "^0.563.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.5",
    "tailwind-merge": "3.4.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/vite": "4.1.17",
    "@types/node": "^22.0.0",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.1",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "tailwindcss": "4.1.17",
    "typescript": "5.9.3",
    "vite": "7.2.4",
    "vite-plugin-singlefile": "2.3.0",
    "wait-on": "^7.0.0"
  }
}
